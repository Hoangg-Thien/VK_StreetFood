<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VK.Mobile"
             xmlns:converters="clr-namespace:VK.Mobile.Converters"
             x:Class="VK.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:BoolToTrackingTextConverter x:Key="BoolToTrackingTextConverter"/>
            <converters:BoolToFavoriteColorConverter x:Key="BoolToFavoriteColorConverter"/>
            <converters:BoolToPlayButtonTextConverter x:Key="BoolToPlayButtonTextConverter"/>
            <converters:CountToBoolConverter x:Key="CountToBoolConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
