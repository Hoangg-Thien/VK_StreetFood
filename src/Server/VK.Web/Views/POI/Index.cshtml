@model IEnumerable<VK.Core.Entities.PointOfInterest>

@{
    ViewData["Title"] = "POI Management";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2">
                        <i class="bi bi-geo-alt-fill"></i> Points of Interest
                    </h1>
                    <p class="text-muted">Manage all food stalls and locations</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-lg"></i> Add New POI
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">Search</label>
                    <input type="text" name="search" class="form-control" placeholder="Search by name or description..."
                           value="@ViewBag.Search">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Category</label>
                    <select name="categoryId" class="form-select">
                        <option value="">All Categories</option>
                        @foreach (var cat in ViewBag.Categories as List<VK.Core.Entities.Category>)
                        {
                            <option value="@cat.Id" selected="@(ViewBag.CategoryId == cat.Id)">@cat.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Filter
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- POI Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Location</th>
                                <th>Rating</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var poi in Model)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">#@poi.Id</span></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(poi.ImageUrl))
                                        {
                                            <img src="@poi.ImageUrl" alt="@poi.Name" class="rounded"
                                                 style="width: 60px; height: 60px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                 style="width: 60px; height: 60px;">
                                                <i class="bi bi-image text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <strong>@poi.Name</strong>
                                        <br />
                                        <small class="text-muted">@(poi.Description != null && poi.Description.Length > 50 ? poi.Description.Substring(0, 50) + "..." : poi.Description)</small>
                                    </td>
                                        <td>
                                            <span class="badge bg-info">@poi.Category?.Name</span>
                                        </td>
                                        <td>
                                            <small>
                                                <i class="bi bi-geo-alt"></i> @poi.Latitude, @poi.Longitude
                                                <br />
                                                @poi.Address
                                            </small>
                                        </td>
                                        <td>
                                            @if (poi.AverageRating > 0)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    @poi.AverageRating.ToString("F1") ‚≠ê
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No ratings</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Details" asp-route-id="@poi.Id" class="btn btn-outline-info"
                                                       title="Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@poi.Id" class="btn btn-outline-primary"
                                                       title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@poi.Id" class="btn btn-outline-danger"
                                                       title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox fs-1 text-muted"></i>
                        <p class="text-muted mt-3">No POIs found. Create your first POI!</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-lg"></i> Add New POI
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>